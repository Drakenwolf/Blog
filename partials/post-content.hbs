<div class="row">
    <div class="col-lg-8 col-sm-10 offset-sm-1 offset-lg-2">
        <section class="post-content">

            <div class="post-btns invisible">
                <div class="reading-container">
                    {{> "icons/reading-time"}}
                    <div class="reading-time">{{reading_time}}</div>
                </div>
                <div class="printer-wrapper" onclick="initPrint('{{title}}', '{{#primary_author}}{{name}}{{/primary_author}}', '{{updated_at}}')">
                    {{> "icons/printer"}}
                </div>
            </div>
            <div class="speechkit-container"></div>
            <div class="editor-content">{{{content}}}</div>

            {{#has tag="#facebook, #twitter, #reddit, #email, #linkedin"}}
                <div class="share-on">
                    <p>{{t "Share on:"}}</p>
                    {{#has tag="#facebook"}}<a class="share-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'share-facebook','width=800,height=600');return false;" title="{{t "Share on Facebook"}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>{{/has}}
                    {{#has tag="#twitter"}}<a class="share-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'share-twitter', 'width=800,height=600');return false;" title="{{t "Share on Twitter"}}"><i class="fab fa-twitter" aria-hidden="true"></i></a>{{/has}}
                    {{#has tag="#linkedin"}}<a class="share-linkedin" href="https://www.linkedin.com/shareArticle?url={{url absolute="true"}}&title={{encode title}}&summary={{encode excerpt}}" onclick="window.open(this.href, 'share-linkedin', 'width=800,height=600');return false;" title="{{t "Share on LinkedIn"}}"><i class="fab fa-linkedin" aria-hidden="true"></i></a>{{/has}}
                    {{#has tag="#reddit"}}<a href="https://www.reddit.com/submit?url={{url absolute="true"}}%2F&title={{encode title}}" title="{{t "Share on Reddit"}}" onclick="window.open(this.href, 'share-reddit', 'width=800,height=600');return false;"><i class="fab fa-reddit-alien" aria-hidden="true"></i></a>{{/has}}
                    {{#has tag="#email"}}<a href="mailto:?subject={{encode title}}&amp;body={{url absolute="true"}}" title="{{t "Share by Email"}}"><i class="fa fa-envelope" aria-hidden="true"></i></a>{{/has}}
                </div>
            {{/has}}

        </section>
        
        {{> "related-posts"}}

        {{#if tags}}
            <ul class="tags">
                {{#foreach tags}}
                    <li>
                        <a href="{{url}}" title="{{name}}" class="tag tag-{{comment_id}} {{slug}}">{{name}}</a>
                    </li>
                {{/foreach}}
            </ul>
        {{/if}}

        {{^is "author"}}
            {{#if authors}}
                {{#foreach authors}}
                    <section class="author {{#if profile_image}}has-image{{/if}}">

                        {{#if profile_image}}
                            <figure class="author-image">
                                <a class="img" href="{{url}}" title="{{name}}"><img src="{{img_url profile_image size="xs"}}" alt="{{name}}"></a>
                            </figure>
                        {{/if}}

                        <div class="author-content">

                            <h3><a href="{{url}}">{{name}}</a></h3>

                            {{#if bio}}
                                <p>{{bio}}</p>
                            {{else}}
                                <p>{{{t "Read <a href='{url}'>more posts</a> by this author" url=(url)}}}.</p>
                            {{/if}}

                            <div class="author-meta">
                                <span class="social">
                                    {{#if twitter}}<a href="{{twitter_url}}" class="twitter" title="{{twitter}}" target="_blank"><i class="fab fa-twitter" aria-hidden="true"></i></a>{{/if}}
                                    {{#if facebook}}<a href="{{facebook_url}}" class="facebook" title="{{facebook}}" target="_blank"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>{{/if}}
                                </span>
                                {{#if website}}<span class="author-link"><a href="{{website}}" target="_blank" rel="noopener noreferrer"><i class="fa fa-link" aria-hidden="true"></i> {{website}}</a></span>{{/if}}
                                {{#if location}}<span class="author-location"><i class="fa fa-map-marker" aria-hidden="true"></i> {{location}}</span>{{/if}}
                            </div>

                        </div>
                    </section>
                {{/foreach}}
            {{/if}}
        {{/is}}
    </div>
</div>
