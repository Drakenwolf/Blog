{{#if primary_tag}}
    {{#get "posts" include="authors" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" as |related_posts|}}
        {{#if related_posts}}
            <section class="related-posts">
                <h1>{{t "Related Posts"}}</h1>
                <div class="related-post">
                    <div class="row">
                        {{#foreach related_posts visibility="all"}}
                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                <time>{{date published_at format="MMMM DD, YYYY"}}</time>
                                <h4><a href="{{url}}">{{title}}</a></h4>
                                <p>{{t "by"}} <a href="{{primary_author.url}}">{{primary_author.name}}</a></p>
                            </div>
                        {{/foreach}}
                    </div>
                </div>
            </section>
        {{/if}}
    {{/get}}
{{/if}}