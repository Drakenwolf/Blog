    <div class="backdrop"></div>

    <footer class="site-footer container" id="main-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-content">
                    {{#is "post, page, author, tag"}}
                        <div class="row">
                            <div id="donations" class="col-md-6">
                                <h3>{{t "Donations"}}</h3>
                                <p>{{{t "Like what you read? Consider a donation to {title}. It's a secure and easy process. We accept both crypto and FIAT currencies." title=@site.title }}}</p>
                                <div class="donations-buttons-wrapper">
                                    <script type="text/javascript" defer src="https://donorbox.org/install-popup-button.js"></script>
                                    <a class="dbox-donation-button btn btn-lg btn-primary btn-outline" href="https://donorbox.org/un-point-de-vue-sur-le-monde?default_interval=o">{{t "FIAT"}}</a>
                                    <a class="btn btn-lg btn-primary btn-outline"
                                       href="https://commerce.coinbase.com/checkout/82979d2d-8095-4214-bc6c-766e47cbced2"
                                       target="popup"
                                       onclick="window.open('https://commerce.coinbase.com/checkout/82979d2d-8095-4214-bc6c-766e47cbced2','popup','width=800,height=600'); return false;">
                                        {{t "Crypto"}}
                                    </a>
                                </div>
                            </div>
                            {{#get "tags" limit="all"}}
                                {{#if tags}}
                                    <div class="col-md-6">
                                        <h3>{{t "Tags"}}</h3>
                                        <ul class="tags">
                                            {{#foreach tags}}
                                                <li>
                                                    <a href="{{url}}">{{name}}</a>
                                                </li>
                                            {{/foreach}}
                                        </ul>
                                    </div>
                                {{/if}}
                            {{/get}}
                        </div>
                    {{/is}}
                    <div class="row">
                        <div class="col-md-12">
                            <p class="copyright">{{t "Copyright"}} &copy; {{date format="YYYY"}}, <a href="{{@site.url}}">{{@site.title}}</a>. {{t "All Right Reserved"}}.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>