{{!< ../default}}

<main id="content" class="container content-inner" role="main">
    <section class="signup-content">

        {{#if @member.paid}}

        {{!-- Logged in, paying member: Redirect home --}}
        <script>window.location = '{{@site.url}}';</script>

        {{else if @member}}

        {{!-- Logged in, not paying: Check out --}}
            <div class="checkout-form">
                <h1 class="checkout-title">{{t "Choose your subscription"}}</h1>
                <p>{{t "Unlock full access to {title} and see the entire library of members-only content & updates" title=@site.title}}</p>
                <div class="checkout-box">
                    <div class="checkout-plan">
                        <header class="checkout-plan-header">
                            <h3>{{t "Monthly"}}</h3>
                            <p><span>{{@price.currency_symbol}}</span><strong>{{@price.monthly}}</strong> / {{t "month"}}</p>
                        </header>
                        <div class="checkout-plan-content">
                            <ul>
                                <li>{{t "Full access to all private posts"}}</li>
                                <li>{{t "Regular updates with new content"}}</li>
                                <li>{{t "Support independent publishing"}}</li>
                                <li>{{t "Simple, secure card payment"}}</li>
                            </ul>
                            <a class="btn btn-control btn-lg btn-primary" href="javascript:" data-members-plan="Monthly">{{t "Choose this plan"}}</a>
                        </div>
                    </div>
                    <div class="checkout-plan">
                        <header class="checkout-plan-header">
                            <h3>{{t "Yearly"}}</h3>
                            <p><span>{{@price.currency_symbol}}</span><strong>{{@price.yearly}}</strong> / {{t "year"}}</p>
                        </header>
                        <div class="checkout-plan-content">
                            <ul>
                                <li>{{t "Full access to all private posts"}}</li>
                                <li>{{t "Regular updates with new content"}}</li>
                                <li>{{t "Support independent publishing"}}</li>
                                <li>{{t "Simple, secure card payment"}}</li>
                                <li>{{t "One easy payment instead of 12!"}}</li>
                            </ul>
                            <a class="btn btn-control btn-lg btn-primary" href="javascript:" data-members-plan="Yearly">{{t "Choose this plan"}}</a>
                        </div>
                    </div>
                </div>
            </div>

        {{else}}

        {{!-- Not logged in: Sign up --}}
            <form class="signup-form" data-members-form="signup">
                <h1 class="signup-title">{{t "Signup to {title}" title=@site.title}}</h1>
                <p>{{@site.description}}</p>
                <div class="signup-box">
                    <input data-members-email type="email" placeholder="{{t "Type your email..."}}" required="true" autocomplete="false" />
                    <button class="btn btn-control btn-primary btn-lg" type="submit">
                        <div class="message-loading">{{> "icons/loading"}}</div>
                        <span class="button-content">{{t "Continue"}}</span>
                    </button>
                </div>
                <p><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/"><strong>{{t "Sign in"}}</strong></a></small></p>
                <div class="message-success">{{{t "<strong>Great!</strong> Check your inbox and click the link to confirm your subscription"}}}</div>
                <div class="message-error">{{t "Please enter a valid email address!"}}</div>
            </form>

        {{/if}}

    </section>
</main>
